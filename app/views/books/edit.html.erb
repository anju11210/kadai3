<main>
  <% if @book.errors.any? %>
    <%= @book.errors.count %>errors prohibited this obj from being saved:
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
  <p id = "notice"></p>
  <div class = "container">
    <div class = "row">
      <div class = "col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <h2>Editing Book</h2>
        <%= form_with model: @book do |f| %>

        <div class= "from-group">
          <label for="bookTitle">Title</label><br/>
          <%= f.text_field :title, autofocus: true, id:"bookTitle", placeholder:@book.title%>
        </div>

        <div class= "from-group">
          <label for="bookBody">Opinion</label><br/>
          <%= f.text_field :body, autofocus: true, id:"bookBody", placeholder:@book.body%>
        </div>

        <div class= "from-group">
          <%= f.submit "Update Book", class:"btn btn-success" %>
        </div>

        <div class= "from-group">
          <%= link_to "Show", book_path(@book.id) %>
          |
          <%= link_to "Back", books_path %>
        </div>

        <% end %>
      </div>
    </div>
  </div>
</main>