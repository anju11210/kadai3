      <div class = "col-md-3">
        <h2>User info</h2>
        <td><%= image_tag current_user.get_profile_image(100,100)%></td>

        <table class = "table">
          <tbody>
            <tr>
              <th>name</th>
                <th><%= current_user.name%></th>
            </tr>
            <tr>
              <th>introduction</th>
                <th><%= current_user.introduction%></th>
            </tr>
          </tbody>
        </table>

        <div class = "row">
          <%= link_to edit_user_path(current_user.id), class: "btn btn-outline-secondary btn-block edit_user_69737" do %><i class="fas fa-user-cog"></i>
          <% end %>
        </div>
        <h2 class = "mt-3">New book</h2>

        <%= form_with model: Book.new do |f| %>
        <div class = "form-group">
          <label for = "book_title">Title</label><br/>
          <%= f.text_field :title %>
        </div>

        <div class = "form-group">
          <label for = "book_opinion">Opinion</label><br/>
          <%= f.text_area :body %>
        </div>

        <%= f.submit 'Create Book', class:"btn btn-success" %><% end %>
      </div>